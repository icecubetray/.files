alias ls='ls --color=auto --group-directories-first --classify';
alias ll='ls -l';
alias la='ll -A';
alias nano='nano --tabsize=4 --autoindent --nowrap --linenumbers --trimblanks --nowrap';
alias grep='grep --color=auto';
alias watch='watch -c';
alias less='less -x 4';
alias vg='valgrind --leak-check=full';
